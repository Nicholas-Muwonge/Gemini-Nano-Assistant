{
  "manifest_version": 3,
  "name": "Gemini Nano Pro",
  "version": "2.0",
  "description": "Multimodal AI Assistant",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "downloads",
    "desktopCapture",
    "tabCapture",
    "audioCapture",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Gemini Nano Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "settings.html",
  "web_accessible_resources": [{
    "resources": ["screenshot.html", "screenshot.js", "icons/*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}