{
  "manifest_version": 3,
  "name": "Gemini Nano Assistant Pro",
  "version": "2.0",
  "description": "Multimodal AI assistant with text, image, voice, and document processing",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "downloads",
    "desktopCapture",
    "tabCapture",
    "audioCapture"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Nano Assistant Pro"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "settings.html",
  "web_accessible_resources": [{
    "resources": ["screenshot.html", "screenshot.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}